# Variables d'environnement pour KlandoDash
# Copier ce fichier vers .env et remplir les valeurs

# Base de données Supabase
DATABASE_URL=postgresql://user:password@host:port/database

# Authentification Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Clé secrète Flask (générer avec: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your_secret_key_here

# Emails autorisés (séparés par des virgules)
AUTHORIZED_EMAILS=achille.tsakas@klando-sn.com,contact@klando-sn.com

# API MapLibre pour les cartes
MAPLIBRE_API_KEY=your_maplibre_api_key
MAPLIBRE_STYLE_URL=your_maplibre_style_url

# Configuration Gmail OAuth2 pour l'envoi d'emails (pour la production)
GMAIL_TOKEN=your_gmail_oauth_token
GMAIL_REFRESH_TOKEN=your_gmail_refresh_token
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret

# Configuration Gmail SMTP pour l'envoi d'emails (legacy)
GMAIL_SENDER_EMAIL=support@klando-sn.com
GMAIL_APP_PASSWORD=your_gmail_app_password_here

# Configuration des logs
LOG_LEVEL=INFO

# Clé API pour sécuriser les webhooks
WEBHOOK_API_KEY=your_webhook_api_key_here

# URL du webhook N8N (optionnel)
N8N_WEBHOOK_URL=