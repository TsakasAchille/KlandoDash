<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Statistiques du trajet - {{ trip.get("trip_id", "") }}</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Inter', sans-serif;
      background: transparent;
      margin: 0;
      padding: 0;
    }
    
    .stats-card {
      background: white;
      border-radius: 28px;
      padding: 25px;
      overflow: hidden;
      margin-bottom: 20px;
    }
    
    .card-header {
      display: flex;
      align-items: center;
      margin-bottom: 20px;
    }
    
    .header-icon {
      width: 42px;
      height: 42px;
      border-radius: 50%;
      background-color: #e8f7ff;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-right: 15px;
    }
    
    .card-title {
      font-size: 22px;
      font-weight: 600;
      color: #333;
      margin: 0;
    }
    
    .stats-container {
      background: #fafcfe;
      border-radius: 18px;
      padding: 20px;
    }
    
    .stat-row {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 16px;
      padding-bottom: 16px;
      border-bottom: 1px solid #eaeef3;
    }
    
    .stat-row:last-child {
      margin-bottom: 0;
      padding-bottom: 0;
      border-bottom: none;
    }
    
    .stat-label {
      font-weight: 500;
      color: #666;
      font-size: 15px;
    }
    
    .stat-value {
      font-weight: 600;
      color: #1c2b46;
      font-size: 16px;
      padding: 6px 12px;
      background: #f0f4f9;
      border-radius: 12px;
    }
    
    .highlight-value {
      color: #2563eb;
      background: #e0ecff;
    }
    
    /* Responsive */
    @media (max-width: 600px) {
      .stats-card {
        padding: 20px;
      }
      
      .card-title {
        font-size: 20px;
      }
    }
  </style>
</head>
<body>
  <div class="stats-card">
    <div class="card-header">
      <div class="header-icon">
        <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="#4281ec" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M22 12h-4l-3 9L9 3l-3 9H2"></path>
        </svg>
      </div>
      <h2 class="card-title">Statistiques du trajet</h2>
    </div>
    
    <div class="stats-container">
      <!-- Prix par place -->
      <div class="stat-row">
        <span class="stat-label">Prix par place</span>
        <span class="stat-value highlight-value">
          {% if trip.get("passenger_price") %}{{ trip.get("passenger_price") }} €{% else %}-{% endif %}
        </span>
      </div>
      
      <!-- Prix conducteur -->
      <div class="stat-row">
        <span class="stat-label">Prix conducteur</span>
        <span class="stat-value">
          {% if trip.get("driver_price") %}{{ trip.get("driver_price") }} €{% else %}-{% endif %}
        </span>
      </div>
      
      <!-- Nombre de places -->
      <div class="stat-row">
        <span class="stat-label">Nombre de places</span>
        <span class="stat-value">{{ trip.get("seats_published", "-") }}</span>
      </div>
      
      <!-- Places disponibles -->
      <div class="stat-row">
        <span class="stat-label">Places disponibles</span>
        <span class="stat-value">{{ trip.get("seats_available", "-") }}</span>
      </div>
      
      <!-- Réservations -->
      <div class="stat-row">
        <span class="stat-label">Réservations</span>
        <span class="stat-value">{{ trip.get("seats_booked", "-") }}</span>
      </div>
      
      <!-- Statut -->
      <div class="stat-row">
        <span class="stat-label">Statut</span>
        <span class="stat-value">{{ trip.get("status", "-") }}</span>
      </div>
    </div>
  </div>
</body>
</html>
