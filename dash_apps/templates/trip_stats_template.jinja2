<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Statistiques du trajet - {{ trip.get("trip_id", "") }}</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Inter', sans-serif;
      background: transparent;
      margin: 0;
      padding: 0;
      font-size: 80%;
    }
    
    .stats-card {
      background: white;
      border-radius: 28px;
      padding: 25px;
      overflow: hidden;
      margin-bottom: 20px;
    }
    
    .card-header {
      display: flex;
      align-items: center;
      margin-bottom: 20px;
    }
    
    .header-icon {
      width: 42px;
      height: 42px;
      border-radius: 50%;
      background-color: #e8f7ff;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-right: 15px;
    }
    
    .card-title {
      font-size: 22px;
      font-weight: 600;
      color: #333;
      margin: 0;
    }
    
    .stats-container {
      background: #fafcfe;
      border-radius: 18px;
      padding: 20px;
    }
    
    .stat-row {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 16px;
      padding-bottom: 16px;
      border-bottom: 1px solid #eaeef3;
    }
    
    .stat-row:last-child {
      margin-bottom: 0;
      padding-bottom: 0;
      border-bottom: none;
    }
    
    .stat-label {
      font-weight: 500;
      color: #666;
      font-size: 15px;
    }
    
    .stat-value {
      font-weight: 600;
      color: #1c2b46;
      font-size: 16px;
      padding: 6px 12px;
      background: #f0f4f9;
      border-radius: 12px;
    }
    
    .highlight-value {
      color: #2563eb;
      background: #e0ecff;
    }
    
    /* Responsive */
    @media (max-width: 600px) {
      .stats-card {
        padding: 20px;
      }
      
      .card-title {
        font-size: 20px;
      }
    }
  </style>
</head>
<body>
  <div class="stats-card">
    <div class="stats-container">
      <!-- Prix passager -->
      <div class="stat-row">
        <span class="stat-label">Prix passager</span>
        <span class="stat-value highlight-value">{{ trip.get("passenger_price", "-") }}</span>
      </div>
      
      <!-- Prix conducteur -->
      <div class="stat-row">
        <span class="stat-label">Prix conducteur</span>
        <span class="stat-value">{{ trip.get("driver_price", "-") }}</span>
      </div>
      
      <!-- Places -->
      <div class="stat-row">
        <span class="stat-label">Places</span>
        <span class="stat-value">{{ trip.get("seats_info", "-") }}</span>
      </div>
      
      <!-- Distance -->
      <div class="stat-row">
        <span class="stat-label">Distance</span>
        <span class="stat-value">{{ trip.get("distance", "-") }}</span>
      </div>
    </div>
  </div>
</body>
</html>
