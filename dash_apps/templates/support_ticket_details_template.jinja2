<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Détails du Ticket</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Inter', sans-serif;
      background: transparent;
      margin: 0;
      padding: 0;
      height: 100vh;
      overflow: hidden;
    }
    
    .container {
      display: flex;
      flex-direction: column;
      height: 100vh;
    }
    
    .fixed-section {
      flex: none;
      background-color: #fff;
      z-index: 10;
      border-bottom: 1px solid #e0e0e0;
      padding: 10px;
      max-height: 45%; /* Limite la hauteur de la section fixe */
    }
    
    .scrollable-section {
      flex: 1;
      overflow-y: auto;
      padding: 10px;
      min-height: 55%; /* Assure que la section commentaires prend au moins cette proportion */
    }
    
    .ticket-details {
      padding: 0;
    }
    
    .ticket-title {
      font-size: 20px;
      font-weight: 600;
      color: #333;
      margin-bottom: 20px;
    }
    
    .info-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 15px;
      margin-bottom: 20px;
    }
    
    .info-item {
      margin-bottom: 10px;
    }
    
    .info-label {
      font-weight: 600;
      color: #555;
      margin-right: 6px;
    }
    
    .info-value {
      color: #333;
    }
    
    .badge {
      display: inline-block;
      padding: 4px 10px;
      border-radius: 15px;
      font-size: 12px;
      font-weight: 600;
      text-transform: uppercase;
    }
    
    .badge-danger {
      background-color: #f8d7da;
      color: #721c24;
    }
    
    .badge-warning {
      background-color: #fff3cd;
      color: #856404;
    }
    
    .badge-success {
      background-color: #d4edda;
      color: #155724;
    }
    
    .message-card {
      background: #f8f9fa;
      border-radius: 8px;
      padding: 15px;
      margin-bottom: 20px;
    }
    
    .comments-section {
      margin-top: 30px;
    }
    
    .comment {
      border-left: 3px solid #6c757d;
      padding-left: 12px;
      margin-bottom: 15px;
    }
    
    .comment-header {
      display: flex;
      justify-content: space-between;
      margin-bottom: 5px;
    }
    
    .comment-author {
      font-weight: 600;
      color: #444;
    }
    
    .comment-date {
      color: #777;
      font-size: 12px;
    }
    
    .comment-text {
      color: #333;
      font-size: 14px;
    }
    
    .status-form, .comment-form {
      background: #f8f9fa;
      padding: 15px;
      border-radius: 8px;
      margin-bottom: 20px;
    }
    
    .form-title {
      font-weight: 600;
      margin-bottom: 10px;
    }
    
    .select-status {
      width: 100%;
      padding: 8px;
      border: 1px solid #ddd;
      border-radius: 4px;
      margin-bottom: 10px;
      font-family: 'Inter', sans-serif;
    }
    
    .textarea-comment {
      width: calc(100% - 16px);
      min-height: 80px;
      padding: 8px;
      border: 1px solid #ddd;
      border-radius: 4px;
      margin-bottom: 10px;
      font-family: 'Inter', sans-serif;
      resize: vertical;
    }
    
    .button {
      background-color: #4281ec;
      color: white;
      border: none;
      padding: 8px 16px;
      border-radius: 4px;
      cursor: pointer;
      font-weight: 500;
      transition: background-color 0.2s;
    }
    
    .button:hover {
      background-color: #2a66c5;
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Section fixe avec les détails du ticket -->
    <div class="fixed-section">
      <div class="ticket-details">
        <div class="ticket-title">{{ ticket.get('subject', 'Sans objet') }}</div>
        
        <!-- Div pour le formulaire de changement de statut -->
        <div id="status-change-form"></div>
        
        <div class="info-grid">
          <div class="info-item">
            <span class="info-label">N° Ticket:</span>
            <span class="info-value">{{ ticket.get('ticket_id', 'N/A') }}</span>
          </div>
          <div class="info-item">
            <span class="info-label">Statut:</span>
            <span class="badge badge-{{ status_class }}">{{ status_text }}</span>
          </div>
          <div class="info-item">
            <span class="info-label">Utilisateur:</span>
            <span class="info-value">{{ ticket.get('user_id', '-') }}</span>
          </div>
          <div class="info-item">
            <span class="info-label">Créé le:</span>
            <span class="info-value">{{ created_date }}</span>
          </div>
          <div class="info-item">
            <span class="info-label">Mis à jour le:</span>
            <span class="info-value">{{ updated_date }}</span>
          </div>
          <div class="info-item">
            <span class="info-label">Préférence de contact:</span>
            <span class="info-value">{{ ticket.get('contact_preference', '-') }}</span>
          </div>
          <div class="info-item">
            <span class="info-label">Téléphone:</span>
            <span class="info-value">{{ ticket.get('phone', '-') }}</span>
          </div>
          <div class="info-item">
            <span class="info-label">E-mail:</span>
            <span class="info-value">{{ ticket.get('mail', '-') }}</span>
          </div>
        </div>
        
        <div class="message-card">
          {{ ticket.get('message', 'Pas de message') }}
        </div>
      </div>
    </div>
    
    <!-- Section défilante avec les commentaires -->
    <div class="scrollable-section">
      <div style="display: flex; flex-direction: column;">
        <!-- Titre de la section commentaires -->
        <h4>Commentaires ({{ comments|length }})</h4>
        
        <!-- Formulaire d'ajout de commentaire avant la liste -->
        <div id="comment-form" class="mb-3"></div>
        
        <!-- Séparateur visuel entre formulaire et liste -->
        <hr style="margin: 10px 0; border-top: 1px solid #eee;">
      
        <!-- Section des commentaires, les plus récents en premier -->
        <div class="comments-section">
        {% if comments %}
          {% for comment in comments|reverse %}
          <div class="comment">
            <div class="comment-header">
              <span class="comment-author">{{ comment.get('author_id', 'Système') }}</span>
              <span class="comment-date">{{ comment.get('formatted_date', '-') }}</span>
            </div>
            <div class="comment-text">{{ comment.get('content', '') }}</div>
          </div>
          {% endfor %}
        {% else %}
          <p>Aucun commentaire pour l'instant</p>
        {% endif %}
        </div>
      </div>
    </div>
  </div>
  
</body>
</html>
