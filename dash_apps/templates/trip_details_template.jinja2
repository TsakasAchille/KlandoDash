<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Détails du trajet - {{ trip.get("trip_id", "") }}</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Inter', sans-serif;
      background: transparent;
      display: flex;
      justify-content: center;
      align-items: center;
      margin: 0;
      padding: 0;
      overflow: hidden;
    }
    
    .card-container {
      max-width: 500px;
      width: 100%;
    }
    
    .travel-card {
      background: white;
      border-radius: 28px;
      padding: 30px;
      overflow: hidden;
    }
    
    .card-header {
      display: flex;
      align-items: center;
      margin-bottom: 25px;
    }
    
    .header-icon {
      width: 48px;
      height: 48px;
      border-radius: 50%;
      background-color: #e8f3ff;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-right: 15px;
    }
    
    .card-title {
      font-size: 26px;
      font-weight: 600;
      color: #333;
      margin: 0;
    }
    
    .details-container {
      background: #f8fafc;
      border-radius: 18px;
      padding: 25px;
    }
    
    .detail-row {
      display: flex;
      align-items: center;
      margin-bottom: 22px;
      padding-bottom: 22px;
      border-bottom: 1px solid #eaeef3;
    }
    
    .detail-row:last-child {
      margin-bottom: 0;
      padding-bottom: 0;
      border-bottom: none;
    }
    
    .icon-circle {
      width: 48px;
      height: 48px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-right: 15px;
      flex-shrink: 0;
    }
    
    .icon-circle img {
      width: 24px;
      height: 24px;
    }
    
    .detail-text {
      flex-grow: 1;
    }
    
    .detail-label {
      font-weight: 500;
      color: #666;
      margin-bottom: 4px;
      font-size: 15px;
    }
    
    .detail-value {
      font-weight: 600;
      color: #1c2b46;
      font-size: 16px;
    }
    
    /* Removed confirm button styles */
    
    /* Destination row now uses standard layout */

    /* Couleurs des cercles d'icônes */
    .icon-departure {
      background-color: #e0ecff;
    }
    
    .icon-departure img {
      filter: brightness(0) saturate(100%) invert(32%) sepia(93%) saturate(1352%) hue-rotate(201deg) brightness(97%) contrast(101%);
    }
    
    .icon-destination {
      background-color: #fff5d9;
    }
    
    .icon-date {
      background-color: #edf2f7;
    }
    
    .icon-time {
      background-color: #edf2f7;
    }
    
    .icon-driver {
      background-color: #edf2f7;
    }

    /* Responsive */
    @media (max-width: 600px) {
      .travel-card {
        padding: 20px;
      }
      
      .icon-circle {
        width: 40px;
        height: 40px;
      }
      
      .card-title {
        font-size: 22px;
      }
    }
  </style>
</head>
<body>
  <div class="card-container">
    <div class="travel-card">  <div class="card-header">
    <div class="header-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#4281ec" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M22.62 12.24c-1.73-1.47-3.77-2.1-5.8-2.1h-8.3a8.52 8.52 0 0 0-4.69 1.4c-.9.56-1.4 1.47-1.4 2.45"></path>
            <path d="M25 6.69c0-2.37-.5-4.2-2-5.2a1.05 1.05 0 0 0-1 0C20.5 2.5 20 4.33 20 6.69V8H15.24A8.6 8.6 0 0 0 8 11.07l-4.7 4.7a1 1 0 0 0-.3.7V18a1 1 0 0 0 1 1h6"></path>
            <path d="M17.8 20H21a3 3 0 0 0 3-3v-2a3 3 0 0 0-3-3h-2.8"></path>
            <path d="M11 18v-6.5"></path>
            <rect x="8" y="16" width="6" height="4" rx="1"></rect>
          </svg>
        </div>
        <h1 class="card-title">Détails du trajet sélectionné</h1>
      </div>
      
      <div class="details-container">
        <!-- Départ -->
        <div class="detail-row">
          <div class="icon-circle icon-departure">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#4281ec" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 2L11 13"></path>
              <path d="M22 2l-7 20-4-9-9-4 20-7z"></path>
            </svg>
          </div>
          <div class="detail-text">
            <div class="detail-label">Départ</div>
            <div class="detail-value">{{ trip.get("departure_name", "-") }}</div>
          </div>
        </div>
        
        <!-- Destination -->
        <div class="detail-row">
          <div class="icon-circle icon-destination">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#e8b317" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
              <circle cx="12" cy="10" r="3"></circle>
            </svg>
          </div>
          <div class="detail-text">
            <div class="detail-label">Destination</div>
            <div class="detail-value">{{ trip.get("destination_name", "-") }}</div>
          </div>
        </div>
        
        <!-- Date -->
        <div class="detail-row">
          <div class="icon-circle icon-date">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#999" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
              <line x1="16" y1="2" x2="16" y2="6"></line>
              <line x1="8" y1="2" x2="8" y2="6"></line>
              <line x1="3" y1="10" x2="21" y2="10"></line>
            </svg>
          </div>
          <div class="detail-text">
            <div class="detail-value">{{ trip.get("departure_date", "-") }}</div>
          </div>
        </div>
        
        <!-- Heure -->
        <div class="detail-row">
          <div class="icon-circle icon-time">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#999" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"></circle>
              <polyline points="12 6 12 12 16 14"></polyline>
            </svg>
          </div>
          <div class="detail-text">
            <div class="detail-label">Heure de départ</div>
            <div class="detail-value">{{ trip.get("departure_schedule", "-") }}</div>
          </div>
        </div>
        
        <!-- Conducteur -->
        <div class="detail-row">
          <div class="icon-circle icon-driver">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#999" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
              <circle cx="12" cy="7" r="4"></circle>
            </svg>
          </div>
          <div class="detail-text">
            <div class="detail-label">Identifiant du conducteur</div>
            <div class="detail-value">{{ trip.get("driver_id", "-") }}</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
