<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Détails du trajet - {{ trip.get("trip_id", "") }}</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Inter', sans-serif;
      background: transparent;
      margin: 0;
      padding: 0;
      font-size: 80%;
    }
    
    .stats-card {
      background: white;
      border-radius: 28px;
      padding: 25px;
      overflow-y: auto;
      overflow-x: hidden;
      margin-bottom: 20px;
      min-height: {{ layout.card_min_height if layout else '400px' }};
      height: {{ layout.card_height if layout else '400px' }};
      width: {{ layout.card_width if layout else '100%' }};
    }
    
    .card-header {
      display: flex;
      align-items: center;
      margin-bottom: 25px;
    }
    
    

    
    .stats-container {
      background: #fafcfe;
      border-radius: 18px;
      padding: 20px;
    }
    
    .stat-row {
      display: flex;
      align-items: center;
      margin-bottom: 16px;
      padding-bottom: 16px;
      border-bottom: 1px solid #eaeef3;
    }
    
    .stat-row:last-child {
      margin-bottom: 0;
      padding-bottom: 0;
      border-bottom: none;
    }
    
    .icon-circle {
      width: 48px;
      height: 48px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-right: 15px;
      flex-shrink: 0;
    }
    
    .icon-circle img {
      width: 24px;
      height: 24px;
    }
    
    .detail-text {
      flex-grow: 1;
    }
    
    .stat-label {
      font-weight: 500;
      color: #666;
      font-size: 13px;
    }
    
    .stat-value {
      font-weight: 600;
      color: #1c2b46;
      font-size: 16px;
      padding: 6px 12px;
      background: #f0f4f9;
      border-radius: 12px;
    }
    
    .highlight-value {
      color: #2563eb;
      background: #e0ecff;
    }
    
    /* Removed confirm button styles */
    
    /* Destination row now uses standard layout */

    /* Couleurs des cercles d'icônes */
    .icon-departure {
      background-color: #e0ecff;
    }
    
    .icon-departure img {
      filter: brightness(0) saturate(100%) invert(32%) sepia(93%) saturate(1352%) hue-rotate(201deg) brightness(97%) contrast(101%);
    }
    
    .icon-destination {
      background-color: #fff5d9;
    }
    
    .icon-date {
      background-color: #edf2f7;
    }
    
    .icon-time {
      background-color: #edf2f7;
    }
    
    .icon-driver {
      background-color: #edf2f7;
    }

    /* Responsive */
    @media (max-width: 600px) {
      .stats-card {
        padding: 20px;
      }
      
      .icon-circle {
        width: 40px;
        height: 40px;
      }
      
     
    }
  </style>
</head>
<body>
  <div class="stats-card">
      <div class="stats-container">
        <!-- Départ -->
        <div class="stat-row">
          <div style="flex-grow: 1; display: flex; justify-content: space-between; align-items: center;">
            <span class="stat-label">Départ</span>
            <span class="stat-value highlight-value">{{ trip.get("departure_location", "-") }}</span>
          </div>
        </div>
        
        <!-- Destination -->
        <div class="stat-row">
          <div style="flex-grow: 1; display: flex; justify-content: space-between; align-items: center;">
            <span class="stat-label">Destination</span>
            <span class="stat-value">{{ trip.get("destination_location", "-") }}</span>
          </div>
        </div>
        
        <!-- Date de départ -->
        <div class="stat-row">
          <div style="flex-grow: 1; display: flex; justify-content: space-between; align-items: center;">
            <span class="stat-label">Date de départ</span>
            <span class="stat-value">{{ trip.get("departure_date_only", "-") }}</span>
          </div>
        </div>
        
        <!-- Heure de départ -->
        <div class="stat-row">
          <div style="flex-grow: 1; display: flex; justify-content: space-between; align-items: center;">
            <span class="stat-label">Heure de départ</span>
            <span class="stat-value">{{ trip.get("departure_time_only", "-") }}</span>
          </div>
        </div>
        
        <!-- Prix passager -->
        <div class="stat-row">
          <div style="flex-grow: 1; display: flex; justify-content: space-between; align-items: center;">
            <span class="stat-label">Prix passager</span>
            <span class="stat-value">{{ trip.get("passenger_price", "-") }}</span>
          </div>
        </div>
        
        <!-- Places -->
        <div class="stat-row">
          <div style="flex-grow: 1; display: flex; justify-content: space-between; align-items: center;">
            <span class="stat-label">Places</span>
            <span class="stat-value">{{ trip.get("seats_info", "-") }}</span>
          </div>
        </div>
        
        <!-- Statut -->
        <div class="stat-row">
          <div style="flex-grow: 1; display: flex; justify-content: space-between; align-items: center;">
            <span class="stat-label">Statut</span>
            <span class="stat-value">{{ trip.get("status_display", trip.get("status", "-")) }}</span>
          </div>
        </div>
        
        <!-- Date de création -->
        <div class="stat-row">
          <div style="flex-grow: 1; display: flex; justify-content: space-between; align-items: center;">
            <span class="stat-label">Date de création</span>
            <span class="stat-value">{{ trip.get("created_at", "-") }}</span>
          </div>
        </div>
        
        <!-- Dernière modification -->
        <div class="stat-row">
          <div style="flex-grow: 1; display: flex; justify-content: space-between; align-items: center;">
            <span class="stat-label">Dernière modification</span>
            <span class="stat-value">{{ trip.get("updated_at", "-") }}</span>
          </div>
        </div>
        
       
      </div>
  </div>
</body>
</html>
