<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Profil Utilisateur</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Inter', sans-serif;
      background: transparent;
      margin: 0;
      padding: 0;
      overflow-y: auto;
      overflow-x: hidden;
    }
    
    .card-container {
      width: 100%;
    }
    
    .profile-card {
      background: white;
      border-radius: 28px;
      padding: 30px;
      overflow: hidden;
    }
    
    .card-header {
      display: flex;
      align-items: center;
      margin-bottom: 25px;
    }
    
    .header-icon {
      width: 64px;
      height: 64px;
      border-radius: 50%;
      background-color: #e0f0ff;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-right: 50px;
    }
    
    .card-title {
      font-size: 26px;
      font-weight: 600;
      color: #333;
      margin: 0;
    }
    
    .details-container {
      background: #f8fafc;
      border-radius: 18px;
      padding: 25px;
    }
    
    .detail-row {
      display: flex;
      align-items: center;
      margin-bottom: 22px;
      padding-bottom: 22px;
      border-bottom: 1px solid #eaeef3;
    }
    
    .detail-row:last-child {
      margin-bottom: 0;
      padding-bottom: 0;
      border-bottom: none;
    }
    
    .icon-circle {
      width: 48px;
      height: 48px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-right: 15px;
      flex-shrink: 0;
    }
    
    .icon-circle svg {
      width: 24px;
      height: 24px;
    }
    
    .detail-text {
      flex-grow: 1;
    }
    
    .detail-label {
      font-weight: 500;
      color: #666;
      margin-bottom: 4px;
      font-size: 15px;
    }
    
    .detail-value {
      font-weight: 600;
      color: #1c2b46;
      font-size: 16px;
      word-break: break-word;
    }
    
    .user-id {
      font-family: monospace;
      background-color: #f0f2f5;
      padding: 4px 8px;
      border-radius: 4px;
      border: 1px solid #e9ecef;
    }
    
    .verified {
      color: #28a745;
    }
    
    .not-verified {
      color: #dc3545;
    }

    .status-badge {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      font-weight: 600;
      padding: 6px 10px;
      border-radius: 999px;
      font-size: 14px;
    }
    .status-ok {
      background: #eaf7ee;
      color: #198754;
      border: 1px solid #cfead7;
    }
    .status-pending {
      background: #fff3f3;
      color: #dc3545;
      border: 1px solid #ffd6d6;
    }
    .btn-link-validate {
      display: inline-block;
      background: #0d6efd;
      color: #fff !important;
      text-decoration: none;
      padding: 8px 12px;
      border-radius: 8px;
      font-weight: 600;
      transition: opacity .15s;
      margin-left: 12px;
    }
    .btn-link-validate:hover { opacity: .9; }
    
    /* Couleurs des cercles d'icônes */
    .icon-name {
      background-color: #e0ecff;
    }
    
    .icon-email {
      background-color: #fff5d9;
    }
    
    .icon-phone {
      background-color: #e8f3ff;
    }
    
    .icon-id {
      background-color: #edf2f7;
    }
    
    .copy-btn {
      background: #f8fafc;
      border: 1px solid #e2e8f0;
      border-radius: 6px;
      padding: 6px;
      cursor: pointer;
      color: #64748b;
      transition: all 0.2s ease;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    
    .copy-btn:hover {
      background: #e2e8f0;
      color: #475569;
      transform: translateY(-1px);
    }
    
    .copy-btn:active {
      transform: translateY(0);
    }
    
    .copy-success {
      background: #dcfce7 !important;
      color: #16a34a !important;
      border-color: #bbf7d0 !important;
    }
    
    @media (max-width: 600px) {
      .profile-card {
        padding: 20px;
      }
      
      .icon-circle {
        width: 40px;
        height: 40px;
      }
      
      .card-title {
        font-size: 22px;
      }
    }
  </style>
</head>
<body>
  <div class="card-container">
    <div class="profile-card">
      <div class="card-header">
        <div class="header-icon" style="overflow: hidden;">
          {% if user.get('photo_url') %}
            <img src="{{ user.get('photo_url') }}" alt="Photo de profil" style="width: 100%; height: 100%; object-fit: cover;">
          {% else %}
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#4281ec" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
              <circle cx="12" cy="7" r="4"></circle>
            </svg>
          {% endif %}
        </div>
        <h1 class="card-title">Profil Utilisateur</h1>
      </div>
      
      <div class="details-container">
        <!-- Nom -->
        <div class="detail-row">
          <div class="icon-circle icon-name">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#4281ec" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
              <circle cx="12" cy="7" r="4"></circle>
            </svg>
          </div>
          <div class="detail-text">
            <div class="detail-label">Nom</div>
            <div class="detail-value">{{ user.get('display_name', user.get('name', user.get('first_name', '-'))) }}</div>
          </div>
        </div>
         <!-- Score et votes (étoiles) -->
        <div class="detail-row">
          <div class="icon-circle icon-id">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#f7b500" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polygon points="12 2 15 8.5 22 9.3 17 14 18.2 21 12 17.8 5.8 21 7 14 2 9.3 9 8.5 12 2"/>
            </svg>
          </div>
          <div class="detail-text">
            <div class="detail-label">Note</div>
            <div class="detail-value" style="display: flex; align-items: center; gap: 8px;">
              {% set rating = user.get('rating', 0) %}
              {% set votes = user.get('rating_count', 0) %}
              <span>
                {% for i in range(1,6) %}
                  {% if rating >= i %}
                    <!-- étoile pleine -->
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="#f7b500" stroke="#f7b500" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
                      <polygon points="12 2 15 8.5 22 9.3 17 14 18.2 21 12 17.8 5.8 21 7 14 2 9.3 9 8.5 12 2"/>
                    </svg>
                  {% elif rating > i-1 %}
                    <!-- demi-étoile -->
                    <svg width="20" height="20" viewBox="0 0 24 24">
                      <defs>
                        <linearGradient id="half-{{ i }}">
                          <stop offset="50%" stop-color="#f7b500"/>
                          <stop offset="50%" stop-color="#e0e0e0"/>
                        </linearGradient>
                      </defs>
                      <polygon points="12 2 15 8.5 22 9.3 17 14 18.2 21 12 17.8 5.8 21 7 14 2 9.3 9 8.5 12 2"
                        fill="url(#half-{{ i }})" stroke="#f7b500" stroke-width="1"/>
                    </svg>
                  {% else %}
                    <!-- étoile vide -->
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#e0e0e0" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
                      <polygon points="12 2 15 8.5 22 9.3 17 14 18.2 21 12 17.8 5.8 21 7 14 2 9.3 9 8.5 12 2"/>
                    </svg>
                  {% endif %}
                {% endfor %}
              </span>
              <span style="color: #888; font-size: 14px;">{{ '%.2f' % rating }}/5&nbsp;&nbsp;  &nbsp;&nbsp;{{ votes }} votes</span>
            </div>
          </div>
        </div>
          <!-- Email -->
        <div class="detail-row">
          <div class="icon-circle icon-email">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#e8b317" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
          </div>
          <div class="detail-text">
            <div class="detail-label">Email</div>
            <div class="detail-value" style="display: flex; align-items: center; gap: 10px;">
              <span id="email-text">{{ user.get('email', '-') }}</span>
              {% if user.get('email') and user.get('email') != '-' %}
              <button onclick="copyToClipboard('{{ user.get('email') }}')" class="copy-btn" title="Copier l'email">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
                  <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
                </svg>
              </button>
              {% endif %}
            </div>
          </div>
        </div>
        
        <!-- Téléphone -->
        <div class="detail-row">
          <div class="icon-circle icon-phone">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#4281ec" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
            </svg>
          </div>
          <div class="detail-text">
            <div class="detail-label">Téléphone</div>
            <div class="detail-value" style="display: flex; align-items: center; gap: 10px;">
              {% set phone_value = user.get('phone_number', user.get('phone', '')) %}
              <span id="phone-text">{{ phone_value if phone_value else '-' }}</span>
              {% if phone_value and phone_value != '-' and phone_value != '' %}
              <button onclick="copyToClipboard('{{ phone_value }}')" class="copy-btn" title="Copier le téléphone">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
                  <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
                </svg>
              </button>
              {% endif %}
            </div>
          </div>
        </div>
        
        <!-- ID utilisateur -->
        <div class="detail-row">
          <div class="icon-circle icon-id">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#999" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"></path>
              <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
              <circle cx="9" cy="7" r="4"></circle>
            </svg>
          </div>
          <div class="detail-text">
            <div class="detail-label">ID</div>
            <div class="detail-value user-id">{{ user.get('uid', user.get('id', '-')) }}</div>
          </div>
        </div>
        <!-- Description courte -->
        <div class="detail-row">
          <div class="icon-circle icon-id">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#999" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"></circle>
            </svg>
          </div>
          <div class="detail-text">
            <div class="detail-label">Bio</div>
            <div class="detail-value">{{ user.get('bio', '-') }}</div>
          </div>
        </div>
        <!-- Date de naissance -->
        <div class="detail-row">
          <div class="icon-circle icon-id">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#999" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
              <line x1="16" y1="2" x2="16" y2="6"></line>
              <line x1="8" y1="2" x2="8" y2="6"></line>
              <line x1="3" y1="10" x2="21" y2="10"></line>
            </svg>
          </div>
          <div class="detail-text">
            <div class="detail-label">Date de naissance</div>
            <div class="detail-value">{{ user.get('birth', '-') }}</div>
          </div>
        </div>
        <!-- Genre -->
        <div class="detail-row">
          <div class="icon-circle icon-id">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#999" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"></circle>
            </svg>
          </div>
          <div class="detail-text">
            <div class="detail-label">Genre</div>
            <div class="detail-value">{{ user.get('gender', '-') }}</div>
          </div>
        </div>
       
        <!-- Rôle préféré -->
        <div class="detail-row">
          <div class="icon-circle icon-id">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#999" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="2" y="7" width="20" height="14" rx="2" ry="2"></rect>
              <path d="M16 3v4"/>
              <path d="M8 3v4"/>
            </svg>
          </div>
          <div class="detail-text">
            <div class="detail-label">Rôle préféré</div>
            <div class="detail-value">{{ user.get('role', '-') }}</div>
          </div>
        </div>
        <!-- Documents chauffeur transmis -->
        <div class="detail-row">
          <div class="icon-circle icon-id">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#999" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
              <path d="M9 9h6v6H9z"/>
            </svg>
          </div>
          <div class="detail-text">
            <div class="detail-label">Documents chauffeur transmis</div>
            <div class="detail-value">{% if user.get('driver_documents_transmitted') %}Oui{% else %}Non{% endif %}</div>
          </div>
        </div>
        <!-- Statut validation conducteur + lien validation -->
        <div class="detail-row">
          <div class="icon-circle icon-id">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#999" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"/>
            </svg>
          </div>
          <div class="detail-text">
            <div class="detail-label">Statut de validation conducteur</div>
            <div class="detail-value">
              {% if user.get('is_driver_doc_validated') %}
                <span class="status-badge status-ok">Validé</span>
                <a class="btn-link-validate" href="/driver-validation?uid={{ user.get('uid', user.get('id','')) }}&tab=validated" target="_top">Ouvrir la validation</a>
              {% else %}
                <span class="status-badge status-pending">En attente</span>
                <a class="btn-link-validate" href="/driver-validation?uid={{ user.get('uid', user.get('id','')) }}&tab=pending" target="_top">Ouvrir la validation</a>
              {% endif %}
            </div>
          </div>
        </div>
        <!-- Permis de conduire -->
        <div class="detail-row">
          <div class="icon-circle icon-id">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#999" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
              <path d="M9 9h6v6H9z"/>
            </svg>
          </div>
          <div class="detail-text">
            <div class="detail-label">Permis de conduire</div>
            <div class="detail-value">
              {% if user.get('driver_license_url') %}
                <a href="{{ user.get('driver_license_url')|e }}" class="js-show-url">Voir</a>
              {% else %}-{% endif %}
            </div>
          </div>
        </div>
        <!-- Carte d'identité -->
        <div class="detail-row">
          <div class="icon-circle icon-id">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#999" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
              <path d="M9 9h6v6H9z"/>
            </svg>
          </div>
          <div class="detail-text">
            <div class="detail-label">Carte d'identité</div>
            <div class="detail-value">
              {% if user.get('id_card_url') %}
                <a href="{{ user.get('id_card_url')|e }}" class="js-show-url">Voir</a>
              {% else %}-{% endif %}
            </div>
          </div>
        </div>
        <!-- Photo de profil -->
        <div class="detail-row">
          <div class="icon-circle icon-id">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#999" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"/>
            </svg>
          </div>
          <div class="detail-text">
            <div class="detail-label">Photo de profil</div>
            <div class="detail-value">
              {% if user.get('photo_url') %}
                <div style="max-width: 250px; margin-top: 10px;">
                  <img src="{{ user.get('photo_url') }}" alt="Photo de profil" style="width: 100%; border-radius: 8px;">
                  <div style="margin-top: 8px; font-size: 13px;">
                    <a href="{{ user.get('photo_url')|e }}" class="js-show-url">Voir en taille réelle</a>
                  </div>
                </div>
              {% else %}
                -
              {% endif %}
            </div>
          </div>
        </div>
        <!-- Dates -->
        <div class="detail-row">
          <div class="icon-circle icon-id">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#999" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
              <line x1="16" y1="2" x2="16" y2="6"></line>
              <line x1="8" y1="2" x2="8" y2="6"></line>
              <line x1="3" y1="10" x2="21" y2="10"></line>
            </svg>
          </div>
          <div class="detail-text">
            <div class="detail-label">Créé le</div>
            <div class="detail-value">{{ user.get('created_at', '-') }}</div>
          </div>
        </div>
        <div class="detail-row">
          <div class="icon-circle icon-id">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#999" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
              <line x1="16" y1="2" x2="16" y2="6"></line>
              <line x1="8" y1="2" x2="8" y2="6"></line>
              <line x1="3" y1="10" x2="21" y2="10"></line>
            </svg>
          </div>
          <div class="detail-text">
            <div class="detail-label">Mis à jour le</div>
            <div class="detail-value">{{ user.get('updated_at', '-') }}</div>
          </div>
        </div>
        
      
      </div>
    </div>
  </div>
  <script>
    function copyToClipboard(text) {
      // Créer un élément temporaire pour la copie
      const tempInput = document.createElement('input');
      tempInput.value = text;
      document.body.appendChild(tempInput);
      tempInput.select();
      document.execCommand('copy');
      document.body.removeChild(tempInput);
      
      // Feedback visuel
      const buttons = document.querySelectorAll('.copy-btn');
      buttons.forEach(btn => {
        if (btn.onclick.toString().includes(text)) {
          btn.classList.add('copy-success');
          const originalHTML = btn.innerHTML;
          btn.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20,6 9,17 4,12"></polyline></svg>';
          
          setTimeout(() => {
            btn.classList.remove('copy-success');
            btn.innerHTML = originalHTML;
          }, 2000);
        }
      });
    }

    // Gestion des liens d'affichage d'URL
    document.addEventListener('click', function (e) {
      const link = e.target.closest('.js-show-url');
      if (!link) return;
      e.preventDefault();                 // n'ouvre pas le lien
      showUrlModal(link.href);           // popup personnalisé avec l'URL
    });

    // Fonction pour afficher l'image dans un modal personnalisé
    function showUrlModal(url) {
      // Créer le modal s'il n'existe pas déjà
      let modal = document.getElementById('url-modal');
      if (!modal) {
        modal = document.createElement('div');
        modal.id = 'url-modal';
        modal.innerHTML = `
          <div class="url-modal-overlay" onclick="closeUrlModal()">
            <div class="url-modal-content" onclick="event.stopPropagation()">
              <div class="url-modal-header">
                <h3>Document</h3>
                <span class="url-modal-close" onclick="closeUrlModal()">&times;</span>
              </div>
              <div class="url-modal-body">
                <img id="modal-image" src="" alt="Document" style="max-width: 100%; max-height: 70vh; object-fit: contain; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
                <div style="margin-top: 15px; text-align: center;">
                  <button onclick="copyUrl()" style="padding: 8px 16px; background: #28a745; color: white; border: none; border-radius: 4px; cursor: pointer;">Copier l'URL</button>
                </div>
              </div>
            </div>
          </div>
        `;
        document.body.appendChild(modal);
      }
      
      // Afficher l'image dans le modal
      document.getElementById('modal-image').src = url;
      modal.style.display = 'block';
      
      // Stocker l'URL pour les boutons
      modal.dataset.currentUrl = url;
    }

    // Fonction pour fermer le modal
    function closeUrlModal() {
      const modal = document.getElementById('url-modal');
      if (modal) {
        modal.style.display = 'none';
      }
    }

    // Fonction pour copier l'URL
    function copyUrl() {
      const modal = document.getElementById('url-modal');
      const url = modal.dataset.currentUrl;
      if (url) {
        try {
          navigator.clipboard.writeText(url).then(() => {
            const button = event.target;
            const originalText = button.textContent;
            button.textContent = 'Copié !';
            button.style.background = '#198754';
            setTimeout(() => {
              button.textContent = originalText;
              button.style.background = '#28a745';
            }, 2000);
          }).catch(() => {
            // Fallback pour les navigateurs plus anciens
            const textArea = document.createElement('textarea');
            textArea.value = url;
            document.body.appendChild(textArea);
            textArea.select();
            document.execCommand('copy');
            document.body.removeChild(textArea);
            
            const button = event.target;
            const originalText = button.textContent;
            button.textContent = 'Copié !';
            button.style.background = '#198754';
            setTimeout(() => {
              button.textContent = originalText;
              button.style.background = '#28a745';
            }, 2000);
          });
        } catch (err) {
          console.log('Erreur lors de la copie:', err);
        }
      }
    }

    // Fermer le modal avec Escape
    document.addEventListener('keydown', function(event) {
      if (event.key === 'Escape') {
        closeUrlModal();
      }
    });
  </script>

