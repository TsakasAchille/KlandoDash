{
  "cache": {
    "key_prefix": "user_profile",
    "ttl": 600
  },
  "validation": {
    "uid": {
      "required": true,
      "min_length": 5
    }
  },
  "user_profile": {
    "fields": {
      "uid": {
        "type": "string",
        "label": "ID Utilisateur",
        "required": true
      },
      "full_name": {
        "type": "string",
        "label": "Nom complet",
        "required": false
      },
      "email": {
        "type": "string",
        "label": "Email",
        "required": false
      },
      "phone_number": {
        "type": "string",
        "label": "Téléphone",
        "required": false
      },
      "photo_url": {
        "type": "string",
        "label": "Photo de profil",
        "required": false
      },
      "bio": {
        "type": "string",
        "label": "Biographie",
        "required": false
      },
      "birth": {
        "type": "datetime",
        "label": "Date de naissance",
        "format": "%Y-%m-%d",
        "required": false
      },
      "gender": {
        "type": "string",
        "label": "Genre",
        "required": false
      },
      "role": {
        "type": "string",
        "label": "Rôle",
        "required": false
      },
      "rating_display": {
        "type": "string",
        "label": "Évaluation",
        "required": false
      },
      "is_driver": {
        "type": "boolean",
        "label": "Conducteur",
        "required": false
      },
      "profile_completion": {
        "type": "integer",
        "label": "Complétion du profil (%)",
        "required": false
      },
      "account_age_days": {
        "type": "integer",
        "label": "Âge du compte (jours)",
        "required": false
      },
      "has_photo": {
        "type": "boolean",
        "label": "A une photo",
        "required": false
      },
      "has_documents": {
        "type": "boolean",
        "label": "A des documents",
        "required": false
      },
      "is_driver_doc_validated": {
        "type": "boolean",
        "label": "Documents validés",
        "required": false
      },
      "created_at": {
        "type": "datetime",
        "label": "Date de création",
        "format": "iso",
        "required": false
      }
    }
  },
  "template_style": {
    "height": "600px",
    "width": "100%",
    "card_height": "550px",
    "card_width": "100%",
    "min_height": "400px"
  },
  "bootstrap_layout": {
    "user_profile_panel": {
      "width": 6
    }
  }
}
